						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200\", () => {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test(\"Manager sees more events\", () => {",
									"    const body = pm.response.json();",
									"    pm.expect(body.count).to.be.at.least(0);",
									"    if (body.results.length > 0) {",
									"        pm.environment.set(\"test_event_id\", body.results[0].id);",
